# Backend Production Environment Variables

# Server
NODE_ENV=production
PORT=3000
API_VERSION=v1

# Database (Update with your production MongoDB details)
MONGODB_URI=mongodb://localhost:27017/phonely
MONGODB_TEST_URI=mongodb://localhost:27017/phonely_test

# Redis
REDIS_URL=redis://localhost:6379
REDIS_TTL=3600

# JWT Authentication (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRE=7d
JWT_REFRESH_EXPIRE=30d

# Firebase (Optional - for admin features and push notifications)
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-storage-bucket
FIREBASE_API_KEY=your-api-key
FIREBASE_AUTH_DOMAIN=your-auth-domain
FIREBASE_MESSAGING_SENDER_ID=your-sender-id
FIREBASE_APP_ID=your-app-id
FIREBASE_MEASUREMENT_ID=your-measurement-id
# FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
# FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com

# Cloudinary (Image hosting)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret
CLOUDINARY_FOLDER=phonely

# AI Service (Production URL)
AI_SERVICE_URL=https://ai.phonely.com.pk
AI_SERVICE_API_KEY=your-ai-service-api-key

# Twilio (for OTP)
TWILIO_ACCOUNT_SID=your-account-sid
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_PHONE_NUMBER=your-phone-number
TWILIO_VERIFIED_NUMBER=your-verified-number

# Email (Resend - Production)
RESEND_API_KEY=your-resend-api-key
FROM_EMAIL=noreply@phonely.com.pk
FROM_NAME=Phonely

# OpenAI API (for AI features)
OPENAI_API_KEY=your-openai-api-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS (Production domains)
CORS_ORIGIN=https://beta.phonely.com.pk,https://phonely.com.pk

# Frontend URL (Production)
FRONTEND_URL=https://beta.phonely.com.pk

# Misc
LOG_LEVEL=info
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp
